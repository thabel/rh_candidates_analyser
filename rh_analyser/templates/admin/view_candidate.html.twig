<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ candidate.firstName }} {{ candidate.lastName }} - Candidature</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        header {
            background: rgba(0,0,0,0.1);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            backdrop-filter: blur(10px);
        }
        .header-left {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .header-left h1 {
            font-size: 28px;
        }
        .header-left p {
            font-size: 14px;
            opacity: 0.9;
        }
        .back-btn {
            background: rgba(255,255,255,0.2);
            padding: 10px 18px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
            font-size: 14px;
            transition: all 0.3s;
        }
        .back-btn:hover {
            background: rgba(255,255,255,0.3);
        }
        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 30px 20px;
        }
        .main-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }
        .card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 48px rgba(0,0,0,0.15);
        }
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            font-size: 18px;
            font-weight: bold;
        }
        .card-body {
            padding: 25px;
        }
        .info-section {
            margin-bottom: 25px;
        }
        .info-section:last-child {
            margin-bottom: 0;
        }
        .info-item {
            margin-bottom: 15px;
        }
        .info-label {
            color: #999;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }
        .info-value {
            color: #333;
            font-size: 16px;
            font-weight: 500;
        }
        .job-title {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }
        .job-title h3 {
            color: #667eea;
            margin-bottom: 5px;
        }
        .job-title p {
            color: #666;
            font-size: 13px;
            line-height: 1.5;
        }
        .status-badge {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
        }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-analyzing { background: #cfe2ff; color: #084298; }
        .status-analyzed { background: #d1e7dd; color: #0f5132; }
        .score-badge {
            font-size: 24px;
            font-weight: bold;
            color: #667eea;
        }
        .score-badge.high {
            color: #28a745;
        }
        .score-badge.low {
            color: #dc3545;
        }
        .pdf-viewer {
            background: #f5f5f5;
            border-radius: 8px;
            overflow: hidden;
            height: 600px;
            display: flex;
            flex-direction: column;
        }
        .pdf-controls {
            background: white;
            padding: 15px;
            display: flex;
            gap: 10px;
            align-items: center;
            border-bottom: 1px solid #eee;
        }
        .pdf-controls button {
            padding: 8px 12px;
            background: #667eea;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 12px;
        }
        .pdf-controls button:hover {
            background: #764ba2;
        }
        .pdf-controls button:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        .pdf-canvas-container {
            flex: 1;
            overflow: auto;
            background: #333;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 20px;
        }
        #pdfCanvas {
            max-width: 100%;
            height: auto;
        }
        .pdf-empty {
            text-align: center;
            color: #999;
            padding: 40px;
        }
        .download-cv-btn {
            background: #28a745;
            color: white;
            border: none;
            padding: 10px 18px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 13px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
        }
        .download-cv-btn:hover {
            background: #218838;
        }
        .analysis-section {
            margin-bottom: 25px;
        }
        .analysis-section:last-child {
            margin-bottom: 0;
        }
        .analysis-item {
            padding: 12px 15px;
            background: #f9f9f9;
            border-radius: 6px;
            margin-bottom: 10px;
            border-left: 3px solid #667eea;
            font-size: 14px;
            line-height: 1.6;
            color: #333;
        }
        .analysis-item.positive {
            border-left-color: #28a745;
            background: #f0f9f6;
        }
        .analysis-item.negative {
            border-left-color: #dc3545;
            background: #fdf7f7;
        }
        .score-circle {
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            color: white;
            margin-bottom: 20px;
        }
        .score-circle .number {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .score-circle .label {
            font-size: 14px;
            opacity: 0.9;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            color: #333;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-family: inherit;
            font-size: 14px;
            resize: vertical;
            min-height: 100px;
        }
        .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
            width: 100%;
        }
        .btn-analyze {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .btn-analyze:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }
        .btn-delete {
            background: #dc3545;
            color: white;
        }
        .btn-delete:hover {
            background: #c82333;
        }
        .full-width {
            grid-column: 1 / -1;
        }
        .alerts {
            margin-bottom: 20px;
        }
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 10px;
            font-weight: 500;
        }
        .alert.success {
            background: #d4edda;
            color: #155724;
            border-left: 4px solid #28a745;
        }
        .alert.error {
            background: #f8d7da;
            color: #721c24;
            border-left: 4px solid #dc3545;
        }
        @media (max-width: 1200px) {
            .main-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="header-left">
            <div>
                <h1>{{ candidate.firstName }} {{ candidate.lastName }}</h1>
                <p>üìß {{ candidate.email }}</p>
            </div>
        </div>
        <a href="{{ path('admin_dashboard') }}" class="back-btn">‚Üê Tableau de Bord</a>
    </header>

    <div class="container">
        <div class="alerts">
            {% for message in app.flashes('success') %}
                <div class="alert success">‚úÖ {{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert error">‚ùå {{ message }}</div>
            {% endfor %}
        </div>

        <div class="main-grid">
            <!-- LEFT: Infos & Actions -->
            <div>
                <!-- Candidate Info -->
                <div class="card">
                    <div class="card-header">üìã Informations Candidat</div>
                    <div class="card-body">
                        <div class="info-section">
                            <div class="info-item">
                                <div class="info-label">Statut</div>
                                <div class="info-value">
                                    <span class="status-badge status-{{ candidate.status }}">
                                        {% if candidate.status == 'pending' %}
                                            ‚è≥ En Attente
                                        {% elseif candidate.status == 'analyzing' %}
                                            ‚öôÔ∏è En Analyse
                                        {% else %}
                                            ‚úÖ Analys√©e
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Date Soumise</div>
                                <div class="info-value">{{ candidate.submittedAt.format('d/m/Y H:i') }}</div>
                            </div>
                            {% if candidate.analyzedAt %}
                                <div class="info-item">
                                    <div class="info-label">Date Analys√©e</div>
                                    <div class="info-value">{{ candidate.analyzedAt.format('d/m/Y H:i') }}</div>
                                </div>
                            {% endif %}
                        </div>

                        {% if candidate.score is not null %}
                            <div class="info-section">
                                <div class="info-item">
                                    <div class="info-label">Score IA</div>
                                    <div class="info-value">
                                        <span class="score-badge {% if candidate.score >= 80 %}high{% elseif candidate.score >= 50 %}{% else %}low{% endif %}">
                                            {{ candidate.score }}/100
                                        </span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if candidate.jobDescription %}
                            <div class="info-section">
                                <div class="info-label">Offre Postul√©e</div>
                                <div class="job-title">
                                    <h3>{{ candidate.jobDescription.title }}</h3>
                                    <p>{{ candidate.jobDescription.description|slice(0, 200) }}...</p>
                                </div>
                            </div>
                        {% endif %}

                        {% if candidate.cvFileName %}
                            <div class="info-section">
                                <div class="info-item">
                                    <div class="info-label">Fichier CV</div>
                                    <div class="info-value" style="margin-bottom: 10px;">{{ candidate.cvFileName }}</div>
                                    <a href="{{ path('app_candidate_download_cv', {id: candidate.id}) }}" class="download-cv-btn">üì• T√©l√©charger PDF</a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Analysis Results -->
                {% if candidate.analysisResult %}
                    <div class="card" style="margin-top: 30px;">
                        <div class="card-header">üìä R√©sultats d'Analyse</div>
                        <div class="card-body">
                            <div class="score-circle">
                                <div class="number">{{ candidate.score }}/100</div>
                                <div class="label">Score de Compatibilit√©</div>
                            </div>

                            <div class="analysis-section">
                                <h3 style="color: #333; margin-bottom: 12px; font-size: 15px;">üìå R√©sum√©</h3>
                                <div class="analysis-item">
                                    {{ candidate.analysisResult.summary }}
                                </div>
                            </div>

                            <div class="analysis-section">
                                <h3 style="color: #28a745; margin-bottom: 12px; font-size: 15px;">‚úÖ Points Forts</h3>
                                {% for point in candidate.analysisResult.positives %}
                                    <div class="analysis-item positive">
                                        ‚Ä¢ {{ point }}
                                    </div>
                                {% endfor %}
                            </div>

                            <div class="analysis-section">
                                <h3 style="color: #dc3545; margin-bottom: 12px; font-size: 15px;">‚ö†Ô∏è √Ä Am√©liorer</h3>
                                {% for point in candidate.analysisResult.negatives %}
                                    <div class="analysis-item negative">
                                        ‚Ä¢ {{ point }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}

                <!-- Analyze Form -->
                {% if candidate.status != 'analyzed' %}
                    <div class="card" style="margin-top: 30px;">
                        <div class="card-header">üîç Lancer Analyse</div>
                        <div class="card-body">
                            <form method="POST" action="{{ path('admin_analyze_candidate_web', {id: candidate.id}) }}">
                                <div class="form-group">
                                    <label>Fiche de Poste (Job Description)</label>
                                    {% if candidate.jobDescription %}
                                        <textarea name="jobDescription" required placeholder="Job Description">{{ candidate.jobDescription.description }}</textarea>
                                    {% else %}
                                        <textarea name="jobDescription" required placeholder="D√©crivez le poste, les comp√©tences requises, l'exp√©rience..."></textarea>
                                    {% endif %}
                                </div>
                                <button type="submit" class="btn btn-analyze">üöÄ Analyser avec Gemini</button>
                            </form>
                        </div>
                    </div>
                {% endif %}

                <!-- Delete -->
                <div class="card" style="margin-top: 30px;">
                    <div class="card-body">
                        <form method="POST" action="{{ path('admin_delete_candidate', {id: candidate.id}) }}" onsubmit="return confirm('‚ö†Ô∏è √ätes-vous s√ªr? Cette action est irr√©versible.');">
                            <button type="submit" class="btn btn-delete">üóëÔ∏è Supprimer Candidature</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- RIGHT: PDF Viewer -->
            <div>
                <div class="card">
                    <div class="card-header">üìÑ Curriculum Vitae (PDF)</div>
                    <div class="pdf-viewer">
                        {% if candidate.cvFileName %}
                            <div class="pdf-controls">
                                <button id="prevBtn" onclick="previousPage()">‚Üê Pr√©c√©dent</button>
                                <span id="pageInfo" style="flex: 1; text-align: center; color: #333; font-weight: 600;"></span>
                                <button id="nextBtn" onclick="nextPage()">Suivant ‚Üí</button>
                                <a href="{{ path('app_candidate_download_cv', {id: candidate.id}) }}" class="download-cv-btn" style="margin: 0; padding: 8px 12px;">‚¨áÔ∏è DL</a>
                            </div>
                            <div class="pdf-canvas-container">
                                <canvas id="pdfCanvas"></canvas>
                            </div>
                        {% else %}
                            <div class="pdf-empty">
                                <p style="font-size: 48px; margin-bottom: 10px;">üìã</p>
                                <p>Aucun CV PDF t√©l√©charg√©</p>
                                <p style="font-size: 12px; margin-top: 5px;">Le candidat doit d'abord t√©l√©charger son CV</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if candidate.cvFileName %}
    <script>
        let pdfDoc = null;
        let pageNum = 1;
        let pageRendering = false;
        let pageNumPending = null;

        const pdfUrl = "{{ path('app_candidate_view_cv', {id: candidate.id}) }}";

        pdfjsLib.getDocument(pdfUrl).promise.then(function(pdf) {
            pdfDoc = pdf;
            document.getElementById('pageInfo').textContent = "Page 1 de " + pdf.numPages;
            renderPage(pageNum);
        });

        function renderPage(num) {
            if (pageRendering) {
                pageNumPending = num;
                return;
            }
            pageRendering = true;

            pdfDoc.getPage(num).then(function(page) {
                const canvas = document.getElementById('pdfCanvas');
                const ctx = canvas.getContext('2d');
                const viewport = page.getViewport({scale: 1.5});

                canvas.height = viewport.height;
                canvas.width = viewport.width;

                const renderContext = {
                    canvasContext: ctx,
                    viewport: viewport
                };

                page.render(renderContext).promise.then(function() {
                    pageRendering = false;
                    if (pageNumPending !== null) {
                        renderPage(pageNumPending);
                        pageNumPending = null;
                    }
                });
            });

            document.getElementById('prevBtn').disabled = num <= 1;
            document.getElementById('nextBtn').disabled = num >= pdfDoc.numPages;
            document.getElementById('pageInfo').textContent = "Page " + num + " de " + pdfDoc.numPages;
        }

        function previousPage() {
            if (pageNum <= 1) return;
            pageNum--;
            renderPage(pageNum);
        }

        function nextPage() {
            if (pageNum >= pdfDoc.numPages) return;
            pageNum++;
            renderPage(pageNum);
        }
    </script>
    {% endif %}
</body>
</html>
