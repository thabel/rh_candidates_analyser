<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Espace - TechCorp</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, sans-serif; background: #f5f5f5; }
        header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; display: flex; justify-content: space-between; align-items: center; }
        header h1 { font-size: 24px; }
        .logout-btn { background: rgba(255,255,255,0.2); padding: 8px 16px; border-radius: 5px; color: white; text-decoration: none; }
        .logout-btn:hover { background: rgba(255,255,255,0.3); }
        .container { max-width: 1000px; margin: 0 auto; padding: 20px; }
        .grid { display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 20px; }
        .card { background: white; padding: 25px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        h2 { color: #333; margin-bottom: 15px; border-bottom: 2px solid #667eea; padding-bottom: 10px; }
        .info-item { margin-bottom: 12px; }
        .info-label { color: #999; font-size: 12px; font-weight: 600; text-transform: uppercase; }
        .info-value { color: #333; font-size: 15px; margin-top: 3px; }
        .status-badge { display: inline-block; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-analyzing { background: #cfe2ff; color: #084298; }
        .status-analyzed { background: #d1e7dd; color: #0f5132; }
        .score { font-size: 36px; font-weight: bold; color: #667eea; }
        .score-high { color: #28a745; }
        .score-low { color: #dc3545; }
        .notification { background: #f9f9f9; padding: 15px; border-radius: 5px; margin-bottom: 10px; border-left: 4px solid #28a745; }
        .notification.unread { background: #fffbf0; border-left-color: #ff9800; }
        .notification-title { font-weight: bold; color: #333; margin-bottom: 5px; }
        .notification-text { color: #555; font-size: 14px; }
        .notification-time { color: #999; font-size: 12px; margin-top: 5px; }
        .apply-btn { display: inline-block; padding: 10px 20px; background: #667eea; color: white; text-decoration: none; border-radius: 5px; }
        .apply-btn:hover { background: #764ba2; }
        .empty { text-align: center; padding: 30px; color: #999; }
        @media (max-width: 768px) {
            .grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <header>
        <h1>üë§ {{ candidate.firstName }} {{ candidate.lastName }}</h1>
        <a href="{{ path('app_candidate_logout') }}" class="logout-btn">üö™ D√©connexion</a>
    </header>

    <div class="container">
        <div class="grid">
            <div class="card">
                <h2>üìã Ma Candidature</h2>
                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value">{{ candidate.email }}</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Identifiant</div>
                    <div class="info-value">{{ candidate.username }}</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Statut</div>
                    <div class="info-value">
                        <span class="status-badge status-{{ candidate.status }}">
                            {% if candidate.status == 'pending' %}
                                ‚è≥ En attente
                            {% elseif candidate.status == 'analyzing' %}
                                ‚öôÔ∏è Analyse...
                            {% else %}
                                ‚úÖ Analys√©e
                            {% endif %}
                        </span>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Soumise le</div>
                    <div class="info-value">{{ candidate.submittedAt.format('d/m/Y H:i') }}</div>
                </div>

                <div class="info-item" style="margin-top: 20px;">
                    <div class="info-label">CV PDF</div>
                    {% if candidate.cvFileName %}
                        <div class="info-value" style="color: #28a745;">
                            ‚úÖ {{ candidate.cvFileName }}
                        </div>
                        <div style="margin-top: 8px; display: flex; gap: 10px;">
                            <a href="{{ path('app_candidate_download_cv', {'id': candidate.id}) }}" style="color: #667eea; text-decoration: none; display: inline-block;">üì• T√©l√©charger</a>
                            <button onclick="showReuploadForm()" style="color: #667eea; background: none; border: none; cursor: pointer; text-decoration: none; padding: 0;">üîÑ Renvoyer un CV</button>
                        </div>
                    {% else %}
                        <div class="info-value" style="color: #dc3545;">
                            ‚ùå Aucun CV t√©l√©charg√©
                        </div>
                    {% endif %}
                </div>

                <!-- Analysis Status (Pass/Fail) - NOT the score -->
                {% if candidate.status == 'analyzed' %}
                    <div class="info-item" style="margin-top: 20px;">
                        <div class="info-label">R√©sultat de l'Analyse</div>
                        {% if candidate.analysisResult and candidate.analysisResult.score >= 70 %}
                            <div style="padding: 15px; background: #d1e7dd; border-left: 4px solid #28a745; border-radius: 5px; color: #0f5132;">
                                <strong>‚úÖ Candidature Accept√©e!</strong>
                                <p style="margin: 8px 0 0 0; font-size: 0.95em;">F√©licitations! Vous avez r√©ussi l'√©tape de s√©lection.</p>
                            </div>
                        {% else %}
                            <div style="padding: 15px; background: #f8d7da; border-left: 4px solid #dc3545; border-radius: 5px; color: #842029;">
                                <strong>‚ùå Candidature Non Accept√©e</strong>
                                <p style="margin: 8px 0 0 0; font-size: 0.95em;">Vous pouvez renvoyer un nouveau CV pour une nouvelle analyse.</p>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>

            <div class="card">
                <h2>üîî Notifications ({{ candidate.notifications|length }})</h2>
                {% if candidate.notifications|length > 0 %}
                    {% for notification in candidate.notifications %}
                        <div class="notification {% if not notification.isRead %}unread{% endif %}">
                            <div class="notification-title">{{ notification.title }}</div>
                            <div class="notification-text">{{ notification.message }}</div>
                            <div class="notification-time">{{ notification.createdAt.format('d/m/Y H:i') }}</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty">
                        Aucune notification
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Detailed analysis is hidden from candidates (showing only pass/fail) -->

        <div class="card">
            <h2>üìã Postuler √† une Offre</h2>

            {% if candidate.jobDescription %}
                <div style="background: #d1e7dd; border-left: 4px solid #28a745; padding: 15px; margin-bottom: 20px; border-radius: 5px;">
                    <strong style="color: #0f5132;">‚úÖ Offre Actuelle:</strong><br>
                    <div style="color: #0f5132; margin-top: 8px;">
                        <h3 style="margin: 0; color: #0f5132;">{{ candidate.jobDescription.title }}</h3>
                        <p style="margin: 5px 0 0 0; font-size: 0.95em;">Vous √™tes en train de postuler pour cette offre</p>
                    </div>
                </div>

                {% if not candidate.cvFileName %}
                    <div style="margin-bottom: 20px;">
                        <h3 style="color: #333; margin-bottom: 15px;">üìÑ T√©l√©charger votre CV (PDF)</h3>
                        <p style="color: #555; margin-bottom: 15px;">
                            Veuillez t√©l√©charger votre CV en format PDF pour cette offre.
                        </p>
                        <form id="cvUploadForm" style="display: flex; gap: 10px; align-items: flex-start;">
                            <input type="file" id="cvFile" name="cvFile" accept=".pdf" required style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px; cursor: pointer;">
                            <button type="submit" style="padding: 10px 20px; background: #667eea; color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; white-space: nowrap;">üì§ T√©l√©charger</button>
                        </form>
                        <div id="uploadStatus" style="margin-top: 15px; display: none;"></div>
                    </div>
                {% else %}
                    <div style="background: #cfe2ff; border-left: 4px solid #084298; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                        <strong style="color: #084298;">‚úÖ CV T√©l√©charg√©</strong><br>
                        <p style="color: #084298; margin: 5px 0 0 0;">{{ candidate.cvFileName }}</p>
                    </div>

                    <!-- Re-upload CV Form (Hidden by default) -->
                    <div id="reuploadSection" style="display: none; margin-bottom: 20px;">
                        <h3 style="color: #333; margin-bottom: 15px;">üìÑ Renvoyer un nouveau CV (PDF)</h3>
                        <p style="color: #555; margin-bottom: 15px;">
                            S√©lectionnez un nouveau CV pour remplacer l'ancien et relancer l'analyse.
                        </p>
                        <form id="cvReuploadForm" style="display: flex; gap: 10px; align-items: flex-start;">
                            <input type="file" id="cvReuploadFile" name="cvFile" accept=".pdf" required style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px; cursor: pointer;">
                            <button type="submit" style="padding: 10px 20px; background: #667eea; color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; white-space: nowrap;">üîÑ Renvoyer</button>
                            <button type="button" onclick="hideReuploadForm()" style="padding: 10px 20px; background: #6c757d; color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; white-space: nowrap;">Annuler</button>
                        </form>
                        <div id="reuploadStatus" style="margin-top: 15px; display: none;"></div>
                    </div>
                {% endif %}
            {% else %}
                <p style="color: #555; margin-bottom: 20px;">
                    Choisissez une offre d'emploi pour postuler.
                </p>
                <div style="margin-bottom: 20px;">
                    <h3 style="color: #333; margin-bottom: 15px;">üìå Offres Disponibles</h3>
                    <div id="jobsList" style="display: grid; gap: 15px;">
                        <!-- Loaded by JavaScript -->
                    </div>
                </div>
            {% endif %}
        </div>

        {% if candidate.status == 'pending' %}
            <div class="card" style="text-align: center; padding: 40px;">
                <p style="color: #555; margin-bottom: 20px;">
                    Votre candidature est en attente d'analyse par notre √©quipe RH.
                </p>
                <a href="{{ path('app_public_home') }}" class="apply-btn">‚Üê Retour √† l'accueil</a>
            </div>
        {% endif %}
    </div>

<script>
// Show/Hide re-upload form
function showReuploadForm() {
    document.getElementById('reuploadSection').style.display = 'block';
}

function hideReuploadForm() {
    document.getElementById('reuploadSection').style.display = 'none';
}

// Load available jobs if candidate hasn't selected one yet
const jobsList = document.getElementById('jobsList');
if (jobsList) {
    loadAvailableJobs();
}

async function loadAvailableJobs() {
    try {
        const response = await fetch('{{ path("app_candidate_get_jobs") }}');
        const jobs = await response.json();

        if (jobs.length === 0) {
            jobsList.innerHTML = '<p style="color: #999;">Aucune offre disponible pour le moment.</p>';
            return;
        }

        jobsList.innerHTML = jobs.map(job => `
            <div style="background: #f9f9f9; padding: 15px; border-radius: 5px; border-left: 4px solid #667eea; cursor: pointer;" onclick="selectJob(${job.id}, '${job.title}')">
                <h3 style="margin: 0 0 8px 0; color: #667eea;">${job.title}</h3>
                <p style="margin: 0; color: #555; font-size: 0.95em; line-height: 1.5;">${job.description.substring(0, 150)}...</p>
                <button style="margin-top: 10px; padding: 8px 16px; background: #667eea; color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: bold;">Postuler pour cette offre</button>
            </div>
        `).join('');
    } catch (error) {
        console.error('Erreur chargement offres:', error);
        jobsList.innerHTML = '<p style="color: #dc3545;">Erreur lors du chargement des offres.</p>';
    }
}

async function selectJob(jobId, jobTitle) {
    try {
        const response = await fetch('{{ path("app_candidate_select_job") }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ jobId: jobId })
        });

        const data = await response.json();

        if (!response.ok) {
            alert(data.message || 'Erreur lors de la s√©lection');
            return;
        }

        // Reload page to show CV upload form
        window.location.reload();
    } catch (error) {
        console.error('Erreur:', error);
        alert('Erreur lors de la s√©lection de l\'offre');
    }
}

// CV Upload form (initial upload)
const cvUploadForm = document.getElementById('cvUploadForm');
if (cvUploadForm) {
    cvUploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const cvFile = document.getElementById('cvFile').files[0];
        const uploadStatus = document.getElementById('uploadStatus');

        if (!cvFile) {
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Veuillez s√©lectionner un fichier PDF</div>';
            return;
        }

        if (cvFile.type !== 'application/pdf') {
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Le fichier doit √™tre au format PDF</div>';
            return;
        }

        if (cvFile.size > 5 * 1024 * 1024) { // 5MB limit
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Le fichier ne doit pas d√©passer 5MB</div>';
            return;
        }

        const formData = new FormData();
        formData.append('cvFile', cvFile);

        try {
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #084298; padding: 10px; background: #cfe2ff; border-radius: 5px;">‚è≥ T√©l√©chargement en cours...</div>';

            const response = await fetch('{{ path("app_candidate_upload_cv") }}', {
                method: 'POST',
                body: formData
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || 'Erreur lors du t√©l√©chargement');
            }

            uploadStatus.innerHTML = '<div style="color: #0f5132; padding: 10px; background: #d1e7dd; border-radius: 5px;">‚úÖ ' + data.message + '</div>';

            // Reload page after 2 seconds
            setTimeout(() => {
                window.location.reload();
            }, 2000);

        } catch (error) {
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå ' + error.message + '</div>';
        }
    });
}

// CV Re-upload form (replacing old CV)
const cvReuploadForm = document.getElementById('cvReuploadForm');
if (cvReuploadForm) {
    cvReuploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const cvFile = document.getElementById('cvReuploadFile').files[0];
        const reuploadStatus = document.getElementById('reuploadStatus');

        if (!cvFile) {
            reuploadStatus.style.display = 'block';
            reuploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Veuillez s√©lectionner un fichier PDF</div>';
            return;
        }

        if (cvFile.type !== 'application/pdf') {
            reuploadStatus.style.display = 'block';
            reuploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Le fichier doit √™tre au format PDF</div>';
            return;
        }

        if (cvFile.size > 5 * 1024 * 1024) { // 5MB limit
            reuploadStatus.style.display = 'block';
            reuploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Le fichier ne doit pas d√©passer 5MB</div>';
            return;
        }

        const formData = new FormData();
        formData.append('cvFile', cvFile);

        try {
            reuploadStatus.style.display = 'block';
            reuploadStatus.innerHTML = '<div style="color: #084298; padding: 10px; background: #cfe2ff; border-radius: 5px;">‚è≥ T√©l√©chargement du nouveau CV en cours...</div>';

            const response = await fetch('{{ path("app_candidate_upload_cv") }}', {
                method: 'POST',
                body: formData
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || 'Erreur lors du t√©l√©chargement');
            }

            reuploadStatus.innerHTML = '<div style="color: #0f5132; padding: 10px; background: #d1e7dd; border-radius: 5px;">‚úÖ ' + data.message + '</div>';

            // Reload page after 2 seconds
            setTimeout(() => {
                window.location.reload();
            }, 2000);

        } catch (error) {
            reuploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå ' + error.message + '</div>';
        }
    });
}
</script>
</body>
</html>
