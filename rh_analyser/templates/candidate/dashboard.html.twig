<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Espace - TechCorp</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, sans-serif; background: #f5f5f5; }
        header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; display: flex; justify-content: space-between; align-items: center; }
        header h1 { font-size: 24px; }
        .logout-btn { background: rgba(255,255,255,0.2); padding: 8px 16px; border-radius: 5px; color: white; text-decoration: none; }
        .logout-btn:hover { background: rgba(255,255,255,0.3); }
        .container { max-width: 1000px; margin: 0 auto; padding: 20px; }
        .grid { display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 20px; }
        .card { background: white; padding: 25px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        h2 { color: #333; margin-bottom: 15px; border-bottom: 2px solid #667eea; padding-bottom: 10px; }
        .info-item { margin-bottom: 12px; }
        .info-label { color: #999; font-size: 12px; font-weight: 600; text-transform: uppercase; }
        .info-value { color: #333; font-size: 15px; margin-top: 3px; }
        .status-badge { display: inline-block; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; }
        .status-pending { background: #fff3cd; color: #856404; }
        .status-analyzing { background: #cfe2ff; color: #084298; }
        .status-analyzed { background: #d1e7dd; color: #0f5132; }
        .score { font-size: 36px; font-weight: bold; color: #667eea; }
        .score-high { color: #28a745; }
        .score-low { color: #dc3545; }
        .notification { background: #f9f9f9; padding: 15px; border-radius: 5px; margin-bottom: 10px; border-left: 4px solid #28a745; }
        .notification.unread { background: #fffbf0; border-left-color: #ff9800; }
        .notification-title { font-weight: bold; color: #333; margin-bottom: 5px; }
        .notification-text { color: #555; font-size: 14px; }
        .notification-time { color: #999; font-size: 12px; margin-top: 5px; }
        .apply-btn { display: inline-block; padding: 10px 20px; background: #667eea; color: white; text-decoration: none; border-radius: 5px; }
        .apply-btn:hover { background: #764ba2; }
        .empty { text-align: center; padding: 30px; color: #999; }
        @media (max-width: 768px) {
            .grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <header>
        <h1>üë§ {{ candidate.firstName }} {{ candidate.lastName }}</h1>
        <a href="{{ path('app_candidate_logout') }}" class="logout-btn">üö™ D√©connexion</a>
    </header>

    <div class="container">
        <div class="grid">
            <div class="card">
                <h2>üìã Ma Candidature</h2>
                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value">{{ candidate.email }}</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Identifiant</div>
                    <div class="info-value">{{ candidate.username }}</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Statut</div>
                    <div class="info-value">
                        <span class="status-badge status-{{ candidate.status }}">
                            {% if candidate.status == 'pending' %}
                                ‚è≥ En attente
                            {% elseif candidate.status == 'analyzing' %}
                                ‚öôÔ∏è Analyse...
                            {% else %}
                                ‚úÖ Analys√©e
                            {% endif %}
                        </span>
                    </div>
                </div>
                <div class="info-item">
                    <div class="info-label">Soumise le</div>
                    <div class="info-value">{{ candidate.submittedAt.format('d/m/Y H:i') }}</div>
                </div>

                <div class="info-item" style="margin-top: 20px;">
                    <div class="info-label">CV PDF</div>
                    {% if candidate.cvFileName %}
                        <div class="info-value" style="color: #28a745;">
                            ‚úÖ {{ candidate.cvFileName }}
                        </div>
                        <a href="{{ path('app_candidate_download_cv', {'id': candidate.id}) }}" style="color: #667eea; text-decoration: none; display: inline-block; margin-top: 8px;">üì• T√©l√©charger</a>
                    {% else %}
                        <div class="info-value" style="color: #dc3545;">
                            ‚ùå Aucun CV t√©l√©charg√©
                        </div>
                    {% endif %}
                </div>

                {% if candidate.score is not null %}
                    <div class="info-item" style="margin-top: 20px;">
                        <div class="info-label">Score Obtenu</div>
                        <div class="score {% if candidate.score >= 80 %}score-high{% else %}score-low{% endif %}">
                            {{ candidate.score }}/100
                        </div>
                    </div>
                {% endif %}

                {% if candidate.analysisResult %}
                    <div class="info-item" style="margin-top: 20px;">
                        <div class="info-label">R√©sum√©</div>
                        <div class="info-value" style="margin-top: 8px; line-height: 1.5;">
                            {{ candidate.analysisResult.summary }}
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="card">
                <h2>üîî Notifications ({{ candidate.notifications|length }})</h2>
                {% if candidate.notifications|length > 0 %}
                    {% for notification in candidate.notifications %}
                        <div class="notification {% if not notification.isRead %}unread{% endif %}">
                            <div class="notification-title">{{ notification.title }}</div>
                            <div class="notification-text">{{ notification.message }}</div>
                            <div class="notification-time">{{ notification.createdAt.format('d/m/Y H:i') }}</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="empty">
                        Aucune notification
                    </div>
                {% endif %}
            </div>
        </div>

        {% if candidate.analysisResult %}
            <div class="card">
                <h2>üìä Analyse D√©taill√©e</h2>

                <div style="margin-bottom: 20px;">
                    <h3 style="color: #333; margin-bottom: 10px;">‚úÖ Points Forts</h3>
                    {% for point in candidate.analysisResult.positives %}
                        <div style="padding: 10px; background: #f0f9f6; border-left: 3px solid #28a745; margin-bottom: 8px; border-radius: 5px;">
                            ‚Ä¢ {{ point }}
                        </div>
                    {% endfor %}
                </div>

                <div>
                    <h3 style="color: #333; margin-bottom: 10px;">‚ö†Ô∏è Points √† Am√©liorer</h3>
                    {% for point in candidate.analysisResult.negatives %}
                        <div style="padding: 10px; background: #fdf7f7; border-left: 3px solid #dc3545; margin-bottom: 8px; border-radius: 5px;">
                            ‚Ä¢ {{ point }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if not candidate.cvFileName %}
            <div class="card">
                <h2>üìÑ T√©l√©charger votre CV (PDF)</h2>
                <p style="color: #555; margin-bottom: 20px;">
                    Veuillez t√©l√©charger votre CV en format PDF pour soumettre votre candidature.
                </p>
                <form id="cvUploadForm" style="display: flex; gap: 10px; align-items: center;">
                    <input type="file" id="cvFile" name="cvFile" accept=".pdf" required style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 5px; cursor: pointer;">
                    <button type="submit" style="padding: 10px 20px; background: #667eea; color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: bold;">üì§ T√©l√©charger</button>
                </form>
                <div id="uploadStatus" style="margin-top: 15px; display: none;"></div>
            </div>
        {% endif %}

        {% if candidate.status == 'pending' %}
            <div class="card" style="text-align: center; padding: 40px;">
                <p style="color: #555; margin-bottom: 20px;">
                    Votre candidature est en attente d'analyse par notre √©quipe RH.
                </p>
                <a href="{{ path('app_public_home') }}" class="apply-btn">‚Üê Retour √† l'accueil</a>
            </div>
        {% endif %}
    </div>

<script>
const cvUploadForm = document.getElementById('cvUploadForm');
if (cvUploadForm) {
    cvUploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const cvFile = document.getElementById('cvFile').files[0];
        const uploadStatus = document.getElementById('uploadStatus');

        if (!cvFile) {
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Veuillez s√©lectionner un fichier PDF</div>';
            return;
        }

        if (cvFile.type !== 'application/pdf') {
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Le fichier doit √™tre au format PDF</div>';
            return;
        }

        if (cvFile.size > 5 * 1024 * 1024) { // 5MB limit
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå Le fichier ne doit pas d√©passer 5MB</div>';
            return;
        }

        const formData = new FormData();
        formData.append('cvFile', cvFile);

        try {
            uploadStatus.style.display = 'block';
            uploadStatus.innerHTML = '<div style="color: #084298; padding: 10px; background: #cfe2ff; border-radius: 5px;">‚è≥ T√©l√©chargement en cours...</div>';

            const response = await fetch('{{ path("app_candidate_upload_cv") }}', {
                method: 'POST',
                body: formData
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || 'Erreur lors du t√©l√©chargement');
            }

            uploadStatus.innerHTML = '<div style="color: #0f5132; padding: 10px; background: #d1e7dd; border-radius: 5px;">‚úÖ ' + data.message + '</div>';

            // Reload page after 2 seconds
            setTimeout(() => {
                window.location.reload();
            }, 2000);

        } catch (error) {
            uploadStatus.innerHTML = '<div style="color: #dc3545; padding: 10px; background: #f8d7da; border-radius: 5px;">‚ùå ' + error.message + '</div>';
        }
    });
}
</script>
</body>
</html>
